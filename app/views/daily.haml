%h1
  Daily quotations

%p
  Quoted at
  = @funds.first.daily.quoted_at.strftime("%A %d, %B %Y")

%table{:class => "table table-striped table-bordered table-condensed"}
  %thead
    %tr
      %th
        Fund name
      %th
        value_at_date
      %th
        daily_variation
      %th
        last_thirty_days
      %th
        last_ninety_days
      %th
        anual_variation
  %tbody
    - @funds.each do |fund|
      %tr
        %td
          = link_to fund.name, url_for(:show, fund.id)
        %td
          = fund.daily.value_at_date
        %td
          = fund.daily.daily_variation
        %td
          = fund.daily.last_thirty_days
        %td
          = fund.daily.last_ninety_days
        %td
          = fund.daily.anual_variation
